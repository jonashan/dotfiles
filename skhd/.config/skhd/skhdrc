# Flipping windows
shift + alt - y : yabai -m space --mirror y-axis
shift + alt - x : yabai -m space --mirror x-axis

# Move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# Move window to space 
shift + ctrl - 1 : yabai -m window --space 1;
shift + ctrl - 2 : yabai -m window --space 2;
shift + ctrl - 3 : yabai -m window --space 3;
shift + ctrl - 4 : yabai -m window --space 4;
shift + ctrl - 5 : yabai -m window --space 5;
shift + ctrl - 6 : yabai -m window --space 6;
shift + ctrl - 7 : yabai -m window --space 7;

# Rebalance window size
shift + alt - e : yabai -m space --balance

# Swap windows
ctrl + shift + alt - j : yabai -m window --swap south
ctrl + shift + alt - k : yabai -m window --swap north
ctrl + shift + alt - h : yabai -m window --swap west
ctrl + shift + alt - l : yabai -m window --swap east
ctrl + shift + alt - down : yabai -m window --swap south
ctrl + shift + alt - up : yabai -m window --swap north
ctrl + shift + alt - left : yabai -m window --swap west
ctrl + shift + alt - right : yabai -m window --swap east

# Focus window
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - l : yabai -m window --focus east
ctrl + alt - down : yabai -m window --focus south
ctrl + alt - up : yabai -m window --focus north
ctrl + alt - left : yabai -m window --focus west
ctrl + alt - right : yabai -m window --focus east

